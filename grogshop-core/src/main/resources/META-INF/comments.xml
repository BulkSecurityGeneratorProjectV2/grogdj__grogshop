<?xml version="1.0" encoding="UTF-8"?>
<entity-mappings version="2.0" xmlns="http://java.sun.com/xml/ns/persistence/orm" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence/orm http://java.sun.com/xml/ns/persistence/orm_2_0.xsd">
	
	
	<named-query name="Comment.getAll">
		<query>
			SELECT
				_comment
			FROM
				Comment _comments					
		</query>
	</named-query>
	
        
        <named-query name="Comment.getAllByClub">
		<query>
			SELECT
				_comment
			FROM
				Comment _comment
                        WHERE
                                _comment.club.id  = :clubId 
		</query>
	</named-query>
        
        <named-query name="Comment.getAllByIte">
		<query>
			SELECT
				_comment
			FROM
				Comment _comment
                        WHERE
                                _comment.item.id  = :itemId 
		</query>
	</named-query>
		
</entity-mappings>