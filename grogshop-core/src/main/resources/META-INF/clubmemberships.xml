<?xml version="1.0" encoding="UTF-8"?>
<entity-mappings version="2.0" xmlns="http://java.sun.com/xml/ns/persistence/orm" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                 xsi:schemaLocation="http://java.sun.com/xml/ns/persistence/orm http://java.sun.com/xml/ns/persistence/orm_2_0.xsd">
	
	
        
    <named-query name="ClubMembership.getAll">
        <query>
            SELECT
            _membership
            FROM
            ClubMembership _membership
            WHERE
            _membership.user.id = :user_id
        </query>
    </named-query>
        
    <named-query name="ClubMembership.getAllMembers">
        <query>
            SELECT
            _membership
            FROM
            ClubMembership _membership
            WHERE
            _membership.club.id = :club_id
        </query>
    </named-query>
        
    <named-query name="ClubMembership.countMembers">
        <query>
            SELECT
            COUNT(_membership)
            FROM
            ClubMembership _membership
            WHERE
            _membership.club.id = :club_id
        </query>
    </named-query>
        
    <named-query name="ClubMembership.get">
        <query>
            SELECT
            _membership
            FROM
            ClubMembership _membership
            WHERE
            _membership.club.id = :club_id and
            _membership.user.id = :user_id  
              
        </query>
    </named-query>    
	
</entity-mappings>